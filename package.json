{
  "name": "webrtc-react-room",
  "version": "1.0.0",
  "description": "WebRTC signaling server with dedicated user and employee interfaces.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "node server.js",
    "build": "npm run user:build && npm run employee:build",
    "user:install": "npm install --prefix user",
    "employee:install": "npm install --prefix employee",
    "user:dev": "npm run dev --prefix user",
    "employee:dev": "npm run dev --prefix employee",
    "user:build": "npm run build --prefix user",
    "employee:build": "npm run build --prefix employee",
    "user:start": "npm start --prefix user",
    "employee:start": "npm start --prefix employee"
  },
  "keywords": [
    "webrtc",
    "react",
    "signaling"
  ],
  "author": "",
  "license": "MIT"
}
